<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/paisTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/pais"
        android:textSize="@dimen/textSize" />

    <ImageView
        android:id="@+id/imgPais"
        android:layout_width="@dimen/imgWidth"
        android:layout_height="@dimen/imgSize"
        android:layout_gravity="center|center_horizontal"
        android:layout_weight="1"
        android:contentDescription="@string/imgDesc"
        app:srcCompat="@drawable/bandeira" />

    <ImageView
        android:id="@+id/imgComida"
        android:layout_width="@dimen/imgWidth"
        android:layout_height="@dimen/imgSize"
        android:layout_gravity="center|center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/comidaDesc"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/comidaTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/prato" />
</LinearLayout>